<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grid_view_items"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginHorizontal="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_item_search_profil_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/user_item_search_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Demo"
        android:layout_below="@+id/user_item_search_profil_picture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:textColor="@color/black"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/online_circle"
        app:civ_border_width="8dp"
        app:civ_border_color="#5BD545"
        android:layout_above="@id/user_item_search_username"
        android:layout_marginLeft="58dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/offline_circle"
        app:civ_border_width="8dp"
        app:civ_border_color="#bfbfbf"
        android:layout_above="@id/user_item_search_username"
        android:layout_marginLeft="58dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/ic_launcher_round"
        android:visibility="gone"

        />

</RelativeLayout>