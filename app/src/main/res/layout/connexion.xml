<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/blueApp"

    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logo_interest_blanc"
        android:id="@+id/logo"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/connexionTitle"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:text="Connectez-vous"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="@color/whiteApp"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/editIdentifiant"

        app:layout_constraintTop_toBottomOf="@+id/connexionTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"

        android:textColor="@color/blueApp"
        android:textAlignment="center"
        android:text="Entrer votre identifiant"

        android:background="@drawable/rounded_white_input"

        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"

        app:layout_constraintTop_toBottomOf="@+id/editIdentifiant"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"

        android:background="@drawable/rounded_white_input"

        android:textAlignment="center"
        android:textColor="@color/blueApp"

        android:id="@+id/editPassword"
        android:text="Mot de passe"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonConnexion"

        app:layout_constraintTop_toBottomOf="@+id/editPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"

        android:gravity="center"
        android:backgroundTint="@color/orangeApp"
        android:text="Connexion"

        />

         <com.google.android.gms.common.SignInButton
                android:id="@+id/google_signIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/buttonConnexion"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:gravity="center"
         />
  
</androidx.constraintlayout.widget.ConstraintLayout>