<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment"
    android:background="@color/whiteApp">


    <androidx.appcompat.widget.Toolbar
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar"
        app:title=""
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/transparent">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/back_button_profil"
            android:src="@drawable/back_arrow_blue"
            android:background="@color/whiteApp"
            android:visibility="gone"
            />

    </androidx.appcompat.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePicture"
        android:layout_width="120dp"
        android:layout_height="120dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"

        />


    <TextView
        android:id="@+id/teUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePicture"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        android:textStyle="bold"
        android:textColor="@color/blueApp"
        android:textSize="16dp"
        android:text="lipsum"

        />
        <TextView
            android:id="@+id/teFirstnameAndLastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teUsername"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textStyle="normal"
            android:textColor="@color/blueApp"
            android:textSize="14dp"
            android:text="Prenom Nom"
            />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/scrollViewDescription"
        app:layout_constraintTop_toBottomOf="@+id/teFirstnameAndLastname"
        app:layout_constraintBottom_toTopOf="@id/open_new_chat_btn"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        >
        <TextView
            android:id="@+id/teDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:textAlignment="center"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="10dp"

            android:textColor="@color/blueApp"
            android:textSize="16dp"

            />
    </ScrollView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open_new_chat_btn"
        app:layout_constraintTop_toBottomOf="@+id/scrollViewDescription"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/interestSrollView"
        android:text="Envoyer un message"
        android:visibility="gone"
        />


    <HorizontalScrollView
        android:id="@+id/interestSrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/scrollViewDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"
        android:scrollbars="none"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginHorizontal="5dp"

                    android:backgroundTint="@color/orangeApp"

                    android:textAlignment="center"
                    android:text="Sport"
                    android:textSize="10dp"
                    android:textColor="@color/whiteApp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginHorizontal="5dp"

                    android:backgroundTint="@color/orangeApp"
                    android:textAlignment="center"
                    android:text="Cinéma"
                    android:textSize="10dp"
                    android:textColor="@color/whiteApp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="@color/orangeApp"
                    android:textAlignment="center"
                    android:text="jeux vidéo"
                    android:textSize="10dp"
                    android:textColor="@color/whiteApp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="@color/orangeApp"
                    android:textAlignment="center"
                    android:text="musique"
                    android:textSize="10dp"
                    android:textColor="@color/whiteApp"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout1"
                android:layout_marginTop="5dp"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="@color/orangeApp"

                    android:textAlignment="center"
                    android:text="esport"
                    android:textSize="10dp"
                    android:textColor="@color/whiteApp"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginHorizontal="5dp"

                    android:backgroundTint="@color/orangeApp"
                    android:textAlignment="center"
                    android:text="Archéoligie"
                    android:textSize="10dp"
                    android:textColor="@color/whiteApp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="@color/orangeApp"
                    android:textAlignment="center"
                    android:text="Dessin"
                    android:textSize="10dp"
                    android:textColor="@color/whiteApp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="@color/orangeApp"
                    android:textAlignment="center"
                    android:text="Peinture"
                    android:textSize="10dp"
                    android:textColor="@color/whiteApp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="@color/orangeApp"
                    android:textAlignment="center"
                    android:text="Mode"
                    android:textSize="10dp"
                    android:textColor="@color/whiteApp"
                    />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </HorizontalScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>