<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment"
    android:background="@color/whiteApp">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePicture"
        android:layout_width="120dp"
        android:layout_height="120dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"

        />


    <TextView
        android:id="@+id/teName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePicture"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        android:textStyle="bold"
        android:textColor="@color/blueApp"
        android:textSize="16dp"

        />
<!--
    <TextView
        android:id="@+id/tePrenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toRightOf="@+id/teName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePicture"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        android:textStyle="bold"
        android:textColor="@color/blueApp"
        android:textSize="16dp"

        />
        -->

    <TextView
        android:id="@+id/teEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teName"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        android:textStyle="italic"
        android:textSize="15dp"
        android:textColor="@color/blueApp"
    />


    <Button
        android:id="@+id/toEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@+id/teEmail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"

        android:backgroundTint="@color/blueApp"
        android:textColor="@color/whiteApp"
        android:textSize="12dp"
        android:text="Modifier votre profile"
        />

    <TextView
        android:id="@+id/teDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teEmail"
        app:layout_constraintBottom_toTopOf="@+id/logout"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="10dp"

        android:textColor="@color/blueApp"
        android:textSize="16dp"

        />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="10dp"

        android:backgroundTint="@color/orangeApp"
        android:textColor="@color/whiteApp"
        android:text="Logout"
    />



</androidx.constraintlayout.widget.ConstraintLayout>