<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blueApp"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo_interest_blanc"
        android:id="@+id/logo"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inscriptionTitle"

        app:layout_constraintTop_toBottomOf="@+id/logo"

        android:text="Inscription"
        android:textColor="@color/whiteApp"
        android:textAlignment="center"
        android:textSize="30dp"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/registerName"

        app:layout_constraintTop_toBottomOf="@+id/inscriptionTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"

        android:background="@drawable/rounded_white_input"

        android:textAlignment="center"
        android:textColor="@color/blueApp"
        android:hint="Entrer votre nom"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/registerEmail"

        app:layout_constraintTop_toBottomOf="@+id/registerName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"

        android:background="@drawable/rounded_white_input"

        android:textAlignment="center"
        android:textColor="@color/blueApp"
        android:hint="Entrer votre email"
        />


    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/registerPassword"

        app:layout_constraintTop_toBottomOf="@+id/registerEmail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"

        android:background="@drawable/rounded_white_input"

        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/blueApp"
        android:hint="Entrer votre mot de passe"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerButton"

        app:layout_constraintTop_toBottomOf="@+id/registerPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:gravity="center"
        android:text="Inscription"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLoginHere"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="5dp"
        android:text="Déjà un compte ?"
        android:textColor="@color/whiteApp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>