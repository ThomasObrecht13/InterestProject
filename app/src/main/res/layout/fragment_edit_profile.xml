<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".editUserProfilFragment.EditProfileFragment"
    android:background="@color/whiteApp">



    <TextView
        android:id="@+id/titleProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"

        android:textAlignment="center"
        android:textColor="@color/blueApp"
        android:text="Modifier votre profile"
        android:textSize="25dp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePicture"
        android:layout_width="120dp"
        android:layout_height="120dp"

        app:layout_constraintTop_toBottomOf="@+id/titleProfile"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        />
    <de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/testprofilePicture"
    android:layout_width="120dp"
    android:layout_height="120dp"

    app:layout_constraintTop_toBottomOf="@+id/profilePicture"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"

    />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="wrap_content"
        android:minWidth="100dp"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/profilePicture"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"

        android:textAlignment="center"
        android:background="@drawable/rounded_white_input"
        android:textColor="@color/blueApp"
        android:hint="Username"
        android:textSize="16dp"

        />
    <EditText
        android:id="@+id/etLastname"
        android:layout_width="wrap_content"
        android:minWidth="100dp"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/etFirstname"
        app:layout_constraintTop_toBottomOf="@+id/etUsername"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"

        android:textAlignment="center"
        android:background="@drawable/rounded_white_input"
        android:textColor="@color/blueApp"
        android:hint="lastname"

        android:textSize="16dp"

        />

    <EditText
        android:id="@+id/etFirstname"
        android:layout_width="wrap_content"
        android:minWidth="100dp"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toRightOf="@+id/etLastname"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUsername"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"

        android:textAlignment="center"
        android:background="@drawable/rounded_white_input"
        android:textColor="@color/blueApp"
        android:hint="Firstname"

        android:textSize="16dp"
        />

    <!--
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPrenom"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
        -->

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etLastname"
        app:layout_constraintBottom_toTopOf="@+id/editProfile"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        android:textAlignment="center"
        android:background="@drawable/rounded_white_input"
        android:textColor="@color/blueApp"
        android:textSize="16dp"

        />
    <Button
        android:id="@+id/editProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="10dp"

        android:backgroundTint="@color/orangeApp"
        android:textColor="@color/whiteApp"
        android:text="Modifier"

        />



</androidx.constraintlayout.widget.ConstraintLayout>