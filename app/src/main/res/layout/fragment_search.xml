<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SearchFragment"
    android:background="@color/whiteApp"
    >

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SearchBar"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/filterTitle"

        android:background="@drawable/separator_bar"

        app:layout_constraintTop_toBottomOf="@+id/SearchBar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"

        android:textAlignment="center"
        android:text="Filtre"
        android:textSize="30dp"
        />

    <!-- Test layout filtre -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sport"
        android:padding="10dp"

        app:layout_constraintTop_toBottomOf="@+id/filterTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/orangeApp"

        android:textAlignment="center"
        android:text="sport"
        android:textSize="14dp"
        android:textColor="@color/whiteApp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jeux"
        android:padding="10dp"

        app:layout_constraintTop_toBottomOf="@+id/filterTitle"
        app:layout_constraintLeft_toRightOf="@id/sport"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"

        android:textAlignment="center"
        android:text="Jeux vidÃ©o"
        android:textSize="14dp"
        android:textColor="@color/blueApp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/voyage"
        android:padding="10dp"

        app:layout_constraintTop_toBottomOf="@+id/filterTitle"
        app:layout_constraintLeft_toRightOf="@id/jeux"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"

        android:textAlignment="center"
        android:text="voyage"
        android:textSize="14dp"
        android:textColor="@color/blueApp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/informatique"
        android:padding="10dp"

        app:layout_constraintTop_toBottomOf="@+id/sport"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"

        android:textAlignment="center"
        android:text="informatique"
        android:textSize="14dp"
        android:textColor="@color/blueApp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/separat"

        android:background="@drawable/separator_bar"

        app:layout_constraintTop_toBottomOf="@+id/informatique"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"

        android:textAlignment="center"
        android:textSize="30dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listFilted"


        app:layout_constraintTop_toBottomOf="@+id/separat"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"

        android:textAlignment="center"
        android:text="list filtrer"
        android:textSize="30dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>